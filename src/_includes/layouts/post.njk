---
layout: layouts/default.njk
#templateClass: tmpl-post
styles:
  - post
---

<article class="post">
  <h1 class="post-title">{{ page.data.title }}</h1>
  <time datetime="{{ page.date | date_to_xmlschema }}" class="post-date">{{ page.date | date_to_string }}{% if page.min_read != null %} - {{page.min_read}} min read {% endif %} - <a href="{{ page.url }}#comments" class="disqus-comment-count" data-disqus-identifier="{{ site.disqusid }}{{ page.url | replace:'index.html','' }}"> <!-- Count will be inserted here --> </a></time>
  {% if true %}
  {% include author.html %}
  {% endif %}

  {{ content | safe }}
</article>

{% if site.related_posts != empty %}
<aside class="related">
  <h3>Related posts</h3>
  <ul class="related-posts">
    {% for post in site.related_posts limit:3 %}
      <li>
        <a href="{{ post.url }}">
          {{ post.title }}
          <small><time datetime="{{ post.date | date_to_xmlschema }}">{{ post.date | date_to_string }} - <a href="{{ post.url }}#comments" class="disqus-comment-count" data-disqus-identifier="{{ site.disqusid }}{{ post.url | replace:'index.html','' }}"> <!-- Count will be inserted here --> </a></time></small>
        </a>
      </li>
    {% endfor %}
  </ul>
</aside>
{% endif %}


